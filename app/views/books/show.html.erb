<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%=f.text_field :title %>

  <h4>Opinion</h4>
  <%=f.text_area :body %><br />

  <%=f.submit"Create Book" %>
  <% end %>


  <thead>
    <tbody>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </tbody>
  </thead>

<h2>Book detail</h2>
<table class="table">
  <tbody>
    <tr>
      <td><%= image_tag @book.user.get_profile_image(100,100) %></td>
      <td><%= link_to book_path(@book.id) do %>
      <%= @book.title %>
      <% end %>
      </td>
      <td><%= @book.body %></td>
      <td><%= link_to "edit",edit_book_path(@book.id) %></td>
      <td><%= link_to "destroy",book_path(@book.id),method: :delete %></td>

    </tr>
  </tbody>
</table>
