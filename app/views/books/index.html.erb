<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>

      <table class="table">
        <tbody>
          <tr>
            <th>name
            <%= @user.name %>
            </th>
          </tr>
          <tr>
            <th>introduction
            <%= @user.introduction %>
            </th>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <a><%=link_to "edit",edit_user_path(@user.id) %></a>
      </div>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%=f.text_field :title %>
      </div>
      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%=f.text_area :body %>
      </div>
       <div class="form-group">
        <%=f.submit"Create Book" %>
      </div>
      <% end %>

  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <% @books.each do |book| %>
          <tr><%= image_tag book.user.get_profile_image(100,100) %></tr>
          <tr>Title:<%= link_to book_path(book.id) do %>
          <%= book.title %>
          <% end %></tr>
          <tr>Opinionï¼š<%= book.body %></tr>
        <% end %>
      </td>
    </tr>

  </tbody>
