<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%=f.text_field :title %>

  <h4>Opinion</h4>
  <%=f.text_area :body %><br />

  <%=f.submit"Create Book" %>
  <% end %>


  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <% @books.each do |book| %>
          <tr><%= image_tag book.user.get_profile_image(100,100) %></tr>
          <tr>Title:<%= link_to book_path(book.id) do %>
          <%= book.title %>
          <% end %></tr>
          <tr>Opinionï¼š<%= book.body %></tr>
        <% end %>
      </td>
    </tr>

  </tbody>
