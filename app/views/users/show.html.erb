<h2>User info</h2>
<table class="table">
  <tbody>
    <tr>
      <th><%= image_tag @user.get_profile_image(100,100) %></th>
    </tr>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>


<%=link_to "edit",edit_user_path(@user.id) %>




<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%=f.text_field :title %>

  <h4>Opinion</h4>
  <%=f.text_area :body %><br />

  <%=f.submit"Create Book" %>
  <% end %>


 <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
     <% @books.each do |book| %>
     <th><%= image_tag book.user.get_profile_image(100,100) %></th>
     <th>Title：<%= link_to book_path(book.id) do %>
     <%= book.title %>
     <% end %></th>
     <th>Body：<%= book.body %></th>
     <% end %>
    </tr>
  </tbody>
</table>