

<h2>User info</h2>
<table class="table">
  <tbody>
    <tr>
      <th><%= image_tag @user.get_profile_image(100,100) %></th>
    </tr>
    <tr>
      <th>name
      <%= @user.name %>
      </th>
    </tr>
    <tr>
      <th>introduction
      <%= @user.introduction %>
      </th>
    </tr>
  </tbody>
</table>

<a><%=link_to "edit",edit_user_path(@user.id) %></a>



<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%=f.text_field :title %>

  <h4>Opinion</h4>
  <%=f.text_area :body %><br />

  <%=f.submit"Create Book" %>
  <% end %>


